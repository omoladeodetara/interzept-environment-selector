{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "config.ts",
    "signals.ts",
    "database.ts",
    "tenants.ts",
    "server.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
