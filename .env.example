# Paid.ai API Configuration
PAID_API_KEY=your_paid_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# For production, specify allowed origins as comma-separated list
# Example: CORS_ALLOWED_ORIGINS=https://app.example.com,https://demo.example.com
# Leave empty for development (uses localhost:3002 by default)
# CORS_ALLOWED_ORIGINS=

# Database Configuration
# Option 1: Use DATABASE_URL (preferred for production)
# DATABASE_URL=postgres://user:password@localhost:5432/lastprice

# Option 2: Use individual DB variables (for development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lastprice
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Webhook Configuration
# Webhook signature verification is DISABLED by default for development
# To enable for production, set ENABLE_WEBHOOK_VERIFICATION=true and provide WEBHOOK_SECRET
# WEBHOOK_SECRET=your_webhook_secret_here
# ENABLE_WEBHOOK_VERIFICATION=false

# Telemetry Configuration
# Set to 'false' to disable Scarf analytics (used by swagger-ui-dist for package usage tracking)
# SCARF_ANALYTICS=false
